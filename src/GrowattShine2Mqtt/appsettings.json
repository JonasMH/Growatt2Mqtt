{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "MqttConnection": {
    "Server": "mosquitto",
    "Port": "8883",
    "UseTls": true,
    "CaCrt": "/data/mosquitto-client-certs/ca.crt",
    "ClientCrt": "/data/mosquitto-client-certs/tls.crt",
    "ClientKey": "/data/mosquitto-client-certs/tls.key",
    "NodeId": "growatttomqtt"
  },
  "Kestrel": {
    "Endpoints": {
      "HttpMixed": {
        "Url": "http://0.0.0.0:5080",
        "Protocols": "Http1AndHttp2"
      },
      // If not using TLS, the channel must be HTTP2 specific and not mixed as above due to GRPC
      // https://docs.microsoft.com/en-us/aspnet/core/grpc/aspnetcore?view=aspnetcore-5.0&tabs=visual-studio#protocol-negotiation
      "Http2": {
        "Url": "http://0.0.0.0:5000",
        "Protocols": "Http2"
      }
    }
  },
  "GrowattToMqttOptions": {
    "InverterRegistersToRead": [
      1044,
      1091,
      1092,
      122,
      123,
      1010,
      608
    ]
  }
}